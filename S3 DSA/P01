#include<stdio.h>
int position=0;
struct Polynomial{
	float coefficient;
}Poly1[10],Poly2[10],Poly3[10];

void main()
{
	int degree_1,degree_2,i;
	printf("\nPolynomial addition");
	printf("\nEnter degree for polynomial 1  ");
	scanf("%d",&degree_1);
	for(i=degree_1;i>=0;i--)
	{
		printf("Enter coefficient for X^%d  : ",i);
		scanf("%f",&Poly1[position].coefficient);
		position++;
	}
	printf("\nEnter degree for polynomial 2  ");
	scanf("%d",&degree_2);
	for(i=degree_2;i>=0;i--)
	{
		printf("Enter coefficient for X^%d  : ",i);
		scanf("%f",&Poly1[position].coefficient);
		position++;
	}
	if(degree_1==degree_2)
	{
		for(int i=degree_1;i>=0;i--)
		{
			Poly3[position].coefficient=Poly1[position].coefficient+Poly2[position].coefficient;
			position++;
			
		}
		
			//dispaying
		for(int i=degree_1;i>=0;i--)
		{
			printf("%f X^%d+",Poly3[position].coefficient,i);
			position++;
			
		}
		
	}

	
	
}